          arrayShuffle = function(in_array) {
            var out_array = [];
            while (in_array.length > 0) out_array.push(in_array.splice(Math.random() * in_array.length, 1));
            return out_array;
          };
          var twitterShareButton = document.querySelector('a.twitter-share-button');
          twitterShareButton.setAttribute('data-count', 'vertical');
          twitterShareButton.setAttribute('data-via', 'lawcrimenews');
          twitterShareButton.setAttribute('data-url', 'https://lawandcrime.com/high-profile/trump-puts-notorious-regime-change-advocate-so-called-abettor-of-genocide-in-charge-of-venezuela/');
          twitterShareButton.setAttribute('data-text', 'Trump Puts Notorious Regime Change Advocate, So-Called \'Abettor of Genocide\' in Charge of Venezuela Policy');
          twitterShareButton.setAttribute('data-related', arrayShuffle(related).join(','));
        </script>
