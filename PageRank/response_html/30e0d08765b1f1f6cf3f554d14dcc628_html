<script type="text/javascript">
	 var commentsdown = '<span>Hide 21 comments</span>';
 	var commentsup = '<span>Show 21 comments</span>';
	$(document).ready(function() {
	//	var width = $(window).width(); // from http://www.venveo.com/articles/view/quick-tip-jquery-media-queries

		$("#burgerbutton").click(function() {
			$("nav#mobile").toggle();
			 if ($(this).hasClass('buttonup')) {
				$(this).removeClass('buttonup').addClass('buttondown');
			} else if ($(this).hasClass('buttondown')) {
				$(this).removeClass('buttondown').addClass('buttonup');
			} else {
				$(this).addClass('buttonup');
			}
		});
		
		
		$("#comments-head").click(function() {
			$("#article-comments").toggle(120);
			 if ($(this).hasClass('discloseup')) {
				$(this).removeClass('discloseup').addClass('disclosedown');
				$(this).html('<span>Hide 21 comments</span>');
			} else if ($(this).hasClass('disclosedown')) {
				$(this).removeClass('disclosedown').addClass('discloseup');
				$(this).html('<span>Show 21 comments</span>');
			} else {
				$(this).addClass('discloseup');
			}
		});
		
		var mySwiper = $('.swiper-container').swiper({
			mode:'horizontal',
			loop: true,
			slidesPerView: 4,
			offsetPxBefore: 7
		});
		var mySwiperBot = $('.swiper-bot-container').swiper({
			mode:'horizontal',
			loop: true,
			slidesPerView: 4,
		//	offsetPxBefore: 1
		});

		$('.arrow-left').click(function(e) {
			e.preventDefault()
			mySwiper.swipePrev()
		});
		$('.arrow-right').click(function(e) {
			e.preventDefault()
			mySwiper.swipeNext()
		});
		$('.arrow-left-bot').click(function(e) {
			e.preventDefault()
			mySwiperBot.swipePrev()
		});
		$('.arrow-right-bot').click(function(e) {
			e.preventDefault()
			mySwiperBot.swipeNext()
		});	
		
		
	});
</script>


