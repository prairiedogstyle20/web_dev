				<div style='min-height: 300px; position: absolute; top: 0px; min-width: 300px; margin: 0px 20px;' id='sticky-target'>
					<!-- PROPER -->
					<div class="proper-ad-unit" style="text-align: center; margin: 0 auto;">
						<div id="proper-ad-alternet_side_1"> <script> propertag.cmd.push(function() { proper_display('alternet_side_1'); }); </script> </div>
