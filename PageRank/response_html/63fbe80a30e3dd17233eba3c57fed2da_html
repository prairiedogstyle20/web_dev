				</div>
				<script>
					
					var container = jQuery('#sticky-container');
					var target = jQuery('#sticky-target');
					
					// first need to determine when to start scrolling and when to stop
					var container_offset = container.offset();
					var container_height = container.height();
					
					var target_height = 0;
					var sticky_start_point = 0;
					var target_stop_offset = 0;
					var sticky_stop_point = 0;
					var scroll_offset = 0;
					var offset_sticky_stop_point = 0
					var scroll_offset = 0;
					
					function calculate_start_stop(){
						
						target_height = target.height();
						sticky_start_point = container_offset.top + 100;
						target_stop_offset = container_height - target_height - 0;
						sticky_stop_point = container_offset.top + target_stop_offset - 80;
						
						var tmp_offset = container.offset();
						scroll_offset = tmp_offset.top - container_offset.top;
						offset_sticky_stop_point = scroll_offset + sticky_stop_point;
						
						console.log( '####################################' );
						console.log( 'Scroll offset: ' + scroll_offset );
						console.log( 'target height ' + target_height );
						console.log( 'container_offset.top ' + container_offset.top );
						console.log( 'target_stop_offset ' + target_stop_offset );
						console.log( 'start scrolling with page at ' + sticky_start_point );
						console.log( 'stop scrolling with page at ' + offset_sticky_stop_point );
						
					}
						
					jQuery(window).scroll(function() {
						
						calculate_start_stop();
						
						var scroll_pos = jQuery(window).scrollTop();
						console.log( 'Scroll position: ' + scroll_pos );
						

						if ( scroll_pos > sticky_start_point && scroll_pos < offset_sticky_stop_point ){
							target.css('position','fixed');
							target.css('top','100px');
							console.log( 'STICK' );
						} else if ( scroll_pos < sticky_start_point ){
							target.css('position','absolute');
							target.css('top','1px');
							console.log( 'UNSTICK TOP' );
						} else if ( scroll_pos > offset_sticky_stop_point ){
							target.css('position','absolute');
							target.css('top', target_stop_offset+'px');
							console.log( "UNSTICK BOTTOM" );
						}

					});
						
				</script>
			</div>
			
