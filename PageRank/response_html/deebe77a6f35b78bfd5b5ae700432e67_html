<script>


    $(document).on("click", ".social-share-buttons .share-twitter-button", function (e) {
        e.preventDefault();
        var a = $(this).parent().data('share-url');

        var art_title = $("h1.article-title").text().trim();
        var width = 575,
            height = 400,
            left = ($(window).width() - width) / 2,
            top = ($(window).height() - height) / 2,
            url = 'https://twitter.com/share?text=' + encodeURI(art_title) + '&url=' + encodeURIComponent(a), // MW-4/9/14 CHANGED
            opts = 'status=1' +
                     ',width=' + width +
                     ',height=' + height +
                     ',top=' + top +
                     ',left=' + left;

        window.open(url, 'Tweet Us', opts);

        return false;

    });


    $(document).on("click", ".social-share-buttons .share-facebook-button", function (e) {
        var ArticleUrl = $(this).parent().data('share-url');
        var ArticleTitle = $(this).parent().data('share-title');

        url = "https://www.facebook.com/dialog/share?app_id=438809493167745&display=popup&href=" + encodeURIComponent(ArticleUrl) + "&redirect_uri=" + encodeURIComponent(ArticleUrl)
        window.open(url, "_blank", "width=500, height=500,top=200,left=200");

    });

    function confirmCancelPremium() {
        try {
            if (confirm('Are you sure you want to unsubscribe?')) {
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    async: false,
                    cache: false,
                    url: "/WS.asmx/CancelPremiumSubscribe",
                    data: "{}",
                    success: function () { alert("Your request is handled"); },
                    error: function () { alert("Your request is failed"); }
                });
            }
            return false;

        }
        catch (err) {
            console.log(err.message);
        }

    }


</script>
<script type="text/javascript">
    try {
        document.addEventListener('spot-im-current-user-typing-start', function () {
            console.log('spot-im-current-user-typing-start');
            stopRefreshSite();
            console.log("refresh Site not active");
        });
        document.addEventListener('spot-im-current-user-typing-end', function () { console.log('spot-im-current-user-typing-end'); });
        document.addEventListener('spot-im-current-user-sent-message', function () {
            console.log('spot-im-current-user-sent-message');
            refreshSiteInterval();
            console.log("refresh Site active");
        });
    }
    catch (err) { console.log(err); }

    function getCookieByName(cname) {
        var c_name = cname + "=";
        var c_a = document.cookie.split(';');
        for (var i = 0; i < c_a.length; i++) {
            var c_c = c_a[i];
            while (c_c.charAt(0) == ' ') {
                c_c = c_c.substring(1);
            }
            if (c_c.indexOf(c_name) == 0) {
                return c_c.substring(c_name.length, c_c.length);
            }
        }
        return "";
    }

    $(document).ready(function () {
        try {
            console.log(getCookieByName("rennabtuohtiweikooc").length);
            if (getCookieByName("rennabtuohtiweikooc").length > 0) {
                $(".is-hide-for-premium").remove();
            }
        }
        catch (err) { console.log(err);}
    });

</script>




