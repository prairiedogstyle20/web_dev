    <meta itemprop="url" content="https://webapi.project-syndicate.org/library/205e178e10df002af1ef50c140c351cf.jpg">
    <picture>



                    <source data-srcset="https://webapi.project-syndicate.org/library/205e178e10df002af1ef50c140c351cf.16-9-medium.1.jpg" media="--xsmall">
