//<![CDATA[
function listLink( linkURL, viewQueryString, flag ){
	var viewParam = viewQueryString.split("&");
	for( var num=0; num < viewParam.length; num++ ){
		var paramArr = viewParam[ num ].split("=");
		var str = "<input type='hidden' name='" + paramArr[0] + "' id='" + paramArr[0] + "' value='" + paramArr[1] + "' />";
		$('#listFrm').append( str );
	}
	
	if( flag ){
		$('#listFrm').append( "<input type='hidden' name='flag' id='flag' value='" + flag + "' />" );
	}
	
	$('#listFrm').attr('action',linkURL);
	$('#listFrm').submit();
}
//]]>
