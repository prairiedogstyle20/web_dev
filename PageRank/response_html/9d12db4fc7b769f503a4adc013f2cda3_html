    window._sp_ = window._sp_ || {};
    window._sp_.config = window._sp_.config || {};

    // Replace YOUR_ACCOUNT_ID with the account ID provided
    // by Sourcepoint
    window._sp_.config.account_id = 378;

    // replace 'mms.sp-prod.net' with your CNAME’d messaging subdomain
    window._sp_.config.mms_domain = 'sourcepoint.vice.com';

    // messaging-specific configuration
    window._sp_.mms = window._sp_.mms || {};
    window._sp_.mms.cmd = window._sp_.mms.cmd || [];

    // CMP Flags
    window._sp_.config.cmp = _sp_.config.cmp || {};
    window._sp_.config.cmp.enabled = true;

    // Have message show immediately
    window._sp_.config.detection = window._sp_.config.detection || {};
    window._sp_.config.detection.timeout = 1;
    window._sp_.config.mms_choice_selected_callback = function (choiceID) {
      var event = new CustomEvent('sourcepointEvent', { detail: choiceID });
      document.body.dispatchEvent(event);
    
      // Set a cookie if modal has been viewed.
      if (parseInt(choiceID) === 11) {
        var date = new Date();
        // Set the cookie to expire in 30 days.
        var date = new Date();
        date.setTime(date.getTime() + 30 * 24 * 60 * 60 * 1000);
        document.cookie = '_vice_cmp_modal_viewed=true; expires=' + date.toGMTString() + ';domain=.vice.com;path=/';
      }
    };

    // Code to call the server and display a message
    window._sp_.mms.cmd.push(function () {
      // Add Key Value Targetting before startMsg();
      window._sp_.mms.setTargeting("browserLanguage", navigator.language);
      window._sp_.mms.setTargeting("source", "website");
      if (document.cookie.indexOf("_vice_modal_window_viewed") >- 1) {
        window._sp_.mms.setTargeting("modal_cookie", "true");
      }
      window._sp_.mms.startMsg();
    });
  </script>
