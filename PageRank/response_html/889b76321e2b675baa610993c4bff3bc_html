			if(currentUrl.indexOf("?nc=1") > -1){
				currentUrl = currentUrl.replace("?nc=1","");
				window.history.pushState({}, null, currentUrl);
				
			}
			
			if(currentUrl.indexOf("&nc=1") > -1){
				currentUrl = currentUrl.replace("&nc=1","");
				window.history.pushState({}, null, currentUrl);
				
			}
			
			jQuery(".wpsdc-drop-cap").parent("p").addClass("drop_c");	
			
			
			var tn_c_policy = getCookie('TNcpolicy');	
			if( tn_c_policy==null ){
				jQuery("#cookies-policy").slideDown();	
			}				
			
			var isIE = /*@cc_on!@*/false || !!document.documentMode;
			if (isIE){ // If Internet Explorer, return version number
				document.cookie = "TNpolicy=1;path=/";
			}else{
				document.cookie = "TNcpolicy=1;expires=0;path=/";
			}
			
			jQuery("#cookies-policy-continue-button").click(function(){
				jQuery("#cookies-policy").slideUp();								
			});
		});		
