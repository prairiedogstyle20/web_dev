		<script >
		
			function call_ad_new(ad_type,ad_name,ad_div_id,ad_name_sno,targeting_var){
				if( tn_ads_on === true ){
					var w  =0;
					var h  =0; 
					var w1 =0; 
					var h1 =0; 
					var w2 =0;
					var h2 =0;
			   
					if (ad_type == "leaderboard"){
						w  = 728;
						h  = 90;
						w1 = 970;
						h1 = 90;
						w2 = 970;
						h2 = 250;
						
						if (isMobile.any()){
							w = 320;
							h = 50;
						}
					}else if (ad_type == "halfpage"){
						w = 300;
						h = 250;
						w1 = 300;
						h1 = 600;
						
						if(isMobile.any()){
							w = 300;
							h = 250;
							w1 = 300;
							h2 = 250;
						}		
					}else if (ad_type == "halfpage250") {
						w = 300;
						h = 250;
					}else if (ad_type == "pixel"){				
						/*for hiding meterpaywall popups when pixel ads call ends here*/				
													
							w = 1;
							h = 1;
							
							if(isMobile.any()){
								w = 1;
								h = 2;
							}
					}
					
					googletag.cmd.push(function() {
						var ad_slot = null;
						if(ad_type == "halfpage" || ad_type == "leaderboard"){
							if(ad_type == "leaderboard"){
								ad_slot = googletag.defineSlot('/1004953/'+ad_name, [[w, h],[w1,h1],[w2,h2]], ad_div_id);
							}else{
								ad_slot = googletag.defineSlot('/1004953/'+ad_name, [[w, h],[w1,h1]], ad_div_id);
							}
						}else{						
							ad_slot = googletag.defineSlot('/1004953/'+ad_name, [w, h], ad_div_id);
						}
						
						ad_slot.setTargeting('tn_pos', [ad_name_sno]).setTargeting('tn_loc', ['atf']).addService(googletag.pubads());				
						
						googletag.pubads().enableSingleRequest();			
						
						var targetArrayLength = 0;					
						var google_pub_ad     = googletag.pubads();					
						targetArrayLength     = Object.keys(targeting_var);    
						
						if(targetArrayLength.length>0){						
							for (var key in targeting_var){
								google_pub_ad = google_pub_ad.setTargeting(key, targeting_var[key]);
							}					
						}
						
													//adArray.push([ad_slot]);
													googletag.enableServices();
					});
					
					googletag.cmd.push(function() {
						googletag.display(ad_div_id);		
					});
				}
			}
		</script>
		
					
