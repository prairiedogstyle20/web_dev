        <script type="text/javascript">
          $(document).ready(function () {
            $('#heading_footer-contactus a[data-toggle="collapse"]').click(function() {
              if($("#heading_footer-contactus .fa").hasClass('fa-plus')) {
                $("#heading_footer-contactus .fa").removeClass('fa-plus'); 
                $("#heading_footer-contactus .fa").addClass('fa-minus');
              } else {
                $("#heading_footer-contactus .fa").removeClass('fa-minus'); 
                $("#heading_footer-contactus .fa").addClass('fa-plus');
              }
            })
          });
        </script>
      

