  <script type="text/javascript">
  
     $(document).ready(function () {
        isLoggedIn = $.cookie("recurly-user-account-code");
        firstName = $.cookie("recurly-user-first-name");
      
        if (isLoggedIn == null) {
           $("#registerspan").show(); 
           $("#subscribespan").show(); 
           $("#subscribespan1").show(); 
           document.getElementById("loginout").innerHTML = "Login";
           document.getElementById("loginout2").innerHTML = "Login";
           document.getElementById("loginout3").innerHTML = "Login";
           $("#logina").show();
           $("#logina1").show();
           $("#loginb").hide();
           $("#loginb1").hide();
        } else {
           $("#registerspan").hide(); 
           $("#subscribespan").hide(); 
           $("#subscribespan1").hide(); 
          document.getElementById("loginout").innerHTML = "Logout";
          document.getElementById("loginout2").innerHTML = "Logout";
          document.getElementById("loginout3").innerHTML = "Logout";
          /*          document.getElementById("subscriberName").innerHTML = "Welcome " + firstName + "";  */
           $("#loginb").hide();
           $("#loginb1").hide();
           $("#logina").show();
           $("#logina1").show();
        }       
    });
  </script>  


  <script>
    $(document).ready(function(){
        $('#shortcuts').children('ul').hide();
        $('#shortcuts').mouseover(function() {
           $(this).children('ul').show();
        }).mouseout(function() {
           $(this).children('ul').hide();
        });

      //        isLoggedIn = $.cookie("recurly-user-account-code");
        isLoggedIn    = $.cookie("recurly-user-uuid");
        isUnomiPrimed = $.cookie("recurly-user-up");
        firstName     = $.cookie("recurly-user-first-name");
     
        if (isLoggedIn == null) {
           $("#subscribespanD").show();
           $("#loginaa").show();
           document.getElementById("loginouts").innerHTML = "Login";
        } else {
           $("#subscribespanD").hide();  
           document.getElementById("subscriberName").innerHTML = "Welcome " + firstName + " ";
           $("#loginaa").show();
           document.getElementById("loginouts").innerHTML = "Logout"; 
          
           if(!isUnomiPrimed)
           {
             setTimeout(function() { primeUnomi(); }, 2000);
           }
        }
    });
    
    function showProfile()
    {
      window.location.href ="/pulse/subscriber-profile";
    }
    
    
    function primeUnomi ()
    {
      if (window.cxs.profileId !=null) {
         console.log("window.cxs.profileId is: ["+window.cxs.profileId+"]");
      
         $.ajax({
              method: "POST",
              url: "/pulse/.checkUser.do",
              dataType: "json",
              cache: false,
              data: {
                "sessionId":window.cxs.sessionId,
                "profileId":window.cxs.profileId,
                "primeUnomi":$.cookie("recurly-user-account-code")
              }
          }).done(function(data) {
             console.log(data);
           
          }).fail(function (jqXHR, exception) {
               console.log(exception);
          });
      }
    }
    	
  </script>
  

