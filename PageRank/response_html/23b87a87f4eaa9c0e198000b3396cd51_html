  <script language="javascript">
    $( document ).ready(function() {
      load_article();
    });  
    
    function load_article()
    {
      var limit=8;
      var news=0;

      var url="/pulse/cms/sites/almonitor/contents/articles/originals/2019/02/palestine-kerem-shalom-crossing-pa-employees-hamas-control.ajaxitem.json";

      var listHTML="";

      $.ajax({
        url : url,
        dataType: "json",
        cache: false
      }).done(function (data) 
              {
                if(data.length<1) {
                  console.log("data.length was < 1");
                  return;
                } 
                
                var i=0;
                
                news=data.length;
                
                var listNode = $("#next_article");
                var title = '';
                var emptyImage = 'https://www.al-monitor.com?t=thumbnail';
                
                listHTML+='<div id="main" class="clearfix TopicWrapper1 grad1">';

                listHTML+='<a href="'+data['link']+'" class="clearfix">';
                listHTML+='<div class="TopicThumb"> <img src="'+data['imageUrl']+'"> </div>';
                listHTML+='<div class="TopicTxtWrapper">';  
                listHTML+='<div class="TopicTxt">'; 
                listHTML+='<p> <span id="pulseName" class="pulseName">'+ (data['topicName'].length <= 0 ? data['pulseName'] : data['topicName'] ) +'</span>'; 
                listHTML+='<span id="small" class="pulseTxt">'+data['title']+'</span></p> '; 
                
                listHTML+='<div class="TopicArrow">';
                listHTML+='<i id="rightIcon" class="fa fa-angle-right fa-sm" style="padding:0;" aria-hidden="true" onclick=""></i>';
                listHTML+='</div> </div> </a> </div>';
                
                listNode.append(listHTML);                
              });

    }


  </script>
 


